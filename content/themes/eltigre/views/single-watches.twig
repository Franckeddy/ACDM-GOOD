{% extends "base.twig" %}

{% block content %}
	<div class="content-wrapper">
		<article class="post-type-{{ post.post_type }}" id="post-{{ post.ID }}">
			<img 
				src="{{ Image(post.images[0]).src }}" 
				srcset="{{ Image(post.images[0]).src }}"
				alt="{{ Image(post.images[0]).alt }}"
			/>
			<img 
				src="{{ Image(post.images[1]).src }}" 
				srcset="{{ Image(post.images[1]).src }}"
				alt="{{ Image(post.images[1]).alt }}"
			/>
		</article>
	</div><!-- /content-wrapper -->
{% endblock %}
