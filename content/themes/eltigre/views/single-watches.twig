{% extends "base.twig" %}

{% block content %}
	{% for post in posts %}
		<div class="content-wrapper">
			<article class="post-type-{{ post.post_type }}" id="post-{{ post.ID }}">
				{{dump(post)}}
				<img 
					src="{{  Image(post.thumbnail_id).src  }}" 
					srcset="{{ Image(image).src }}"
					alt="{{ Image(image).alt }}"
				/>
				{% for image in post.images %}
				<img 
					src="{{ Image(image).src }}" 
					srcset="{{ Image(image).src }}"
					alt="{{ Image(image).alt }}"
				/>
				{% endfor %}
				<div class="watch__description--part">
					<div class="description__title">
						{{ post.title }}
					</div>
					<div class="description__content">
						{{ post.content }}
					</div>	
				</div>
			</article>
		</div><!-- /content-wrapper -->
	{% endfor %}
{% endblock %}
