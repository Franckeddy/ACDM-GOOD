{% extends "base.twig" %}

{# 
  VERSION SANS ACF - Utilise les custom fields WordPress natifs
  Les données doivent être passées via le contexte Timber
#}

{% block content %}
	{% for post in posts %}
		<!-- ===== DESKTOP ===== -->
		<div class="content-wrapper content-wrapper-desktop">
			<article class="post-type-{{ post.post_type }} single__watches single__watches--new-layout desktop" id="post-{{ post.ID }}">
				<div class="single__watches--container">
					<!-- Colonne gauche : Images -->
					<div class="single__watches-gallery">
						<!-- Image principale -->
						<div class="single__watches-images-main">
							{% if post.images is not empty %}
								<a href="{{ Image(post.images[0]).src }}" data-lightbox="watches" id="main-watch-image">
									<img 
										src="{{ Image(post.images[0]).src }}"
										srcset="{{ Image(post.images[0]).src }}"
										alt="{{ Image(post.images[0]).alt }}"
										class="main-image"
									/>
								</a>
							{% else %}
								<a href="{{ Image(post.thumbnail).src }}" data-lightbox="watch">
									<img
										src="{{ Image(post.thumbnail).src }}"
										srcset="{{ Image(post.thumbnail).src }}"
										alt="{{ Image(post.thumbnail).alt }}"
										class="main-image"
									/>
								</a>
							{% endif %}
						</div>

						<!-- Vignettes -->
						{% if post.images is not empty and post.images|length > 1 %}
							<div class="single__watches-thumbnails">
								{% for key, galerie in post.images %}
									<div class="thumbnail-item {% if key == 0 %}active{% endif %}" data-image-index="{{ key }}">
										<img 
											src="{{ Image(galerie).src }}"
											alt="{{ Image(galerie).alt }}"
											data-full-image="{{ Image(galerie).src }}"
										/>
									</div>
								{% endfor %}
							</div>
						{% endif %}
					</div>

					<!-- Colonne droite : Informations -->
					<div class="single__watches__info">
						<!-- Titre -->
						<h1 class="single__watches__title">
							{{ post.title }}
						</h1>

						<!-- Prix -->
						{% if post.meta('price') %}
							<div class="single__watches__price">
								€{{ post.meta('price')|number_format(0, ',', ' ') }}
							</div>
						{% endif %}

						<!-- Description principale -->
						<div class="single__watches__description">
							{{ post.content }}
						</div>

						<!-- Sections supplémentaires via meta -->
						{% if post.meta('long_title') or post.meta('long_description') %}
							<div class="single__watches__acf-section">
								{% if post.meta('long_title') %}
									<h2 class="title_h2_acf">{{ post.meta('long_title') }}</h2>
								{% endif %}
								{% if post.meta('long_description') %}
									<p>{{ post.meta('long_description')|raw }}</p>
								{% endif %}
							</div>
						{% endif %}

						{% if post.meta('short_title') or post.meta('short_description') %}
							<div class="single__watches__acf-section">
								{% if post.meta('short_title') %}
									<h2 class="title_h2_acf">{{ post.meta('short_title') }}</h2>
								{% endif %}
								{% if post.meta('short_description') %}
									<p>{{ post.meta('short_description')|raw }}</p>
								{% endif %}
							</div>
						{% endif %}

						<!-- Caractéristiques techniques -->
						<div class="single__watches__specs">
							{% if post.meta('movement') %}
								<p><strong>Mouvement :</strong> {{ post.meta('movement') }}</p>
							{% endif %}
							{% if post.meta('caliber') %}
								<p><strong>Calibre :</strong> {{ post.meta('caliber') }}</p>
							{% endif %}
							{% if post.meta('year') %}
								<p><strong>Année :</strong> {{ post.meta('year') }}</p>
							{% endif %}
							{% if post.meta('diameter') %}
								<p><strong>Diamètre :</strong> {{ post.meta('diameter') }}</p>
							{% endif %}
							{% if post.meta('case_material') %}
								<p><strong>Matériau :</strong> {{ post.meta('case_material') }}</p>
							{% endif %}
							{% if post.meta('availability') %}
								<p><strong>Disponible au</strong> 
								{% if post.meta('availability_link') %}
									<a href="{{ post.meta('availability_link') }}">{{ post.meta('availability') }}</a>
								{% else %}
									{{ post.meta('availability') }}
								{% endif %}
								</p>
							{% endif %}
							{% if post.meta('reference') %}
								<p><strong>Réf:</strong> {{ post.meta('reference') }}</p>
							{% endif %}
						</div>

						<!-- Partage social -->
						<div class="single__watches__share">
							<span>PARTAGER</span>
							<div class="share-icons">
								<a href="#" class="share-icon" aria-label="Facebook">
									<svg viewBox="0 0 24 24"><path d="M9 8h-3v4h3v12h5v-12h3.642l.358-4h-4v-1.667c0-.955.192-1.333 1.115-1.333h2.885v-5h-3.808c-3.596 0-5.192 1.583-5.192 4.615v3.385z"/></svg>
								</a>
								<a href="#" class="share-icon" aria-label="Twitter">
									<svg viewBox="0 0 24 24"><path d="M24 4.557c-.883.392-1.832.656-2.828.775 1.017-.609 1.798-1.574 2.165-2.724-.951.564-2.005.974-3.127 1.195-.897-.957-2.178-1.555-3.594-1.555-3.179 0-5.515 2.966-4.797 6.045-4.091-.205-7.719-2.165-10.148-5.144-1.29 2.213-.669 5.108 1.523 6.574-.806-.026-1.566-.247-2.229-.616-.054 2.281 1.581 4.415 3.949 4.89-.693.188-1.452.232-2.224.084.626 1.956 2.444 3.379 4.6 3.419-2.07 1.623-4.678 2.348-7.29 2.04 2.179 1.397 4.768 2.212 7.548 2.212 9.142 0 14.307-7.721 13.995-14.646.962-.695 1.797-1.562 2.457-2.549z"/></svg>
								</a>
								<a href="#" class="share-icon" aria-label="Pinterest">
									<svg viewBox="0 0 24 24"><path d="M12 0c-6.627 0-12 5.372-12 12 0 5.084 3.163 9.426 7.627 11.174-.105-.949-.2-2.405.042-3.441.218-.937 1.407-5.965 1.407-5.965s-.359-.719-.359-1.782c0-1.668.967-2.914 2.171-2.914 1.023 0 1.518.769 1.518 1.69 0 1.029-.655 2.568-.994 3.995-.283 1.194.599 2.169 1.777 2.169 2.133 0 3.772-2.249 3.772-5.495 0-2.873-2.064-4.882-5.012-4.882-3.414 0-5.418 2.561-5.418 5.207 0 1.031.397 2.138.893 2.738.098.119.112.224.083.345l-.333 1.36c-.053.22-.174.267-.402.161-1.499-.698-2.436-2.889-2.436-4.649 0-3.785 2.75-7.262 7.929-7.262 4.163 0 7.398 2.967 7.398 6.931 0 4.136-2.607 7.464-6.227 7.464-1.216 0-2.359-.631-2.75-1.378l-.748 2.853c-.271 1.043-1.002 2.35-1.492 3.146 1.124.347 2.317.535 3.554.535 6.627 0 12-5.373 12-12 0-6.628-5.373-12-12-12z"/></svg>
								</a>
							</div>
						</div>

						<!-- Quantité et bouton d'ajout -->
						<div class="single__watches__actions">
							<div class="quantity-selector">
								<button class="quantity-btn quantity-minus" aria-label="Diminuer la quantité">−</button>
								<input type="number" class="quantity-input" value="1" min="1" max="10">
								<button class="quantity-btn quantity-plus" aria-label="Augmenter la quantité">+</button>
							</div>
							<button class="cta cta__add-to-cart">AJOUTER AU PANIER</button>
						</div>

						<!-- Boutons secondaires -->
						<div class="single__watches__button-container">
							<a class="cta cta__interest" href="{{ interest.url }}">{{ interest.label }}</a> 
							<a class="cta cta__return" href="{{ watches.url }}">{{ watches.label }}</a> 
						</div>

						<!-- Garantie -->
						<div class="single__watches__warranty">
							<h2 class="title_h2_acf">Garantie & Services</h2>
							<ul>
								<li>Montre révisée et garantie 3 ans par notre atelier.</li>
							</ul>
						</div>
					</div>
				</div>

				<!-- Same Spirit Section -->
				{% if similar_watches %}
					<div class="single__watches__similar">
						<h2>Dans le même esprit</h2>
						<div class="similar-watches-grid">
							{% for similar in similar_watches %}
								<div class="similar-watch-item">
									<a href="{{ similar.link }}">
										<img src="{{ Image(similar.thumbnail).src }}" alt="{{ similar.title }}">
										<h3>{{ similar.title }}</h3>
										{% if similar.meta('price') %}
											<span class="price">€{{ similar.meta('price')|number_format(0, ',', ' ') }}</span>
										{% endif %}
									</a>
								</div>
							{% endfor %}
						</div>
					</div>
				{% endif %}
			</article>
		</div>

		<!-- ===== MOBILE ===== -->
		<div class="content-wrapper content-wrapper-mobile">
			<article class="post-type-{{ post.post_type }} single__watches single__watches--new-layout mobile" id="post-{{ post.ID }}">
				<div class="single__watches--container">
					<!-- Image principale mobile -->
					<div class="single__watches-images">
						<div class="mobile-carousel">
							<div class="mobile-carousel__track">
								{% if post.images is not empty %}
									{% for key, galerie in post.images %}
										<div class="mobile-carousel__slide">
											<a href="{{ Image(galerie).src }}" data-lightbox="watches-mobile">
												<img
													src="{{ Image(galerie).src }}"
													alt="{{ Image(galerie).alt }}"
													loading="lazy"
												/>
											</a>
										</div>
									{% endfor %}
								{% else %}
									<div class="mobile-carousel__slide">
										<a href="{{ Image(post.thumbnail).src }}" data-lightbox="watch-mobile">
											<img
												src="{{ Image(post.thumbnail).src }}"
												alt="{{ Image(post.thumbnail).alt }}"
												loading="lazy"
											/>
										</a>
									</div>
								{% endif %}
							</div>
						</div>
					</div>

					<!-- Informations mobile -->
					<div class="single__watches__text-part-wrapper">
						<div class="single__watches__text-part">
							<h1 class="single__watches__title">
								{{ post.title }}
							</h1>

							{% if post.meta('price') %}
								<div class="single__watches__price">
									€{{ post.meta('price')|number_format(0, ',', ' ') }}
								</div>
							{% endif %}

							<div class="single__watches__content">
								{{ post.content }}
							</div>

							<!-- Actions mobile -->
							<div class="single__watches__actions">
								<div class="quantity-selector">
									<button class="quantity-btn quantity-minus">−</button>
									<input type="number" class="quantity-input" value="1" min="1" max="10">
									<button class="quantity-btn quantity-plus">+</button>
								</div>
								<button class="cta cta__add-to-cart">AJOUTER AU PANIER</button>
							</div>

							<div class="single__watches__button-container">
								<a class="cta cta__interest" href="{{ interest.url }}">{{ interest.label }}</a>
								<a class="cta cta__return" href="{{ watches.url }}">{{ watches.label }}</a>
							</div>
						</div>
					</div>
				</div>

				<!-- Similar watches mobile -->
				{% if similar_watches %}
					<div class="single__watches__similar">
						<h2>Dans le même esprit</h2>
						<div class="similar-watches-grid">
							{% for similar in similar_watches %}
								<div class="similar-watch-item">
									<a href="{{ similar.link }}">
										<img src="{{ Image(similar.thumbnail).src }}" alt="{{ similar.title }}">
										<h3>{{ similar.title }}</h3>
										{% if similar.meta('price') %}
											<span class="price">€{{ similar.meta('price')|number_format(0, ',', ' ') }}</span>
										{% endif %}
									</a>
								</div>
							{% endfor %}
						</div>
					</div>
				{% endif %}
			</article>
		</div>
	{% endfor %}
{% endblock %}
